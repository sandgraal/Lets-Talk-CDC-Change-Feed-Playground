{
  "name": "lets-talk-cdc-playground",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:sim && npm run build:web",
    "build:sim": "vite build --mode sim",
    "build:web": "vite build --mode web",
    "dev:sim": "vite --mode sim",
    "dev:web": "npm-run-all2 build:sim dev:web:serve",
    "dev:web:serve": "vite --mode web",
    "dev:all": "npm-run-all2 --parallel dev:sim dev:web:serve",
    "preview:sim": "vite preview --mode sim",
    "preview:web": "vite preview --mode web",
    "test:sim": "node sim/tests/property-tests.mjs",
    "test:e2e": "playwright test",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:harness-report": "node tests/harness-report-snapshot.mjs",
    "lint:scenarios": "node scripts/lint-scenarios.mjs",
    "check:bundles": "node scripts/check-generated-bundles.mjs",
    "ci:preflight": "npm-run-all2 build:sim build:web check:bundles lint:scenarios test:sim test:e2e test:harness-report ci:harness",
    "ci:harness": "node scripts/run-harness-ci.mjs",
    "harness:history": "node scripts/summarize-harness-history.mjs",
    "prepare:scenario": "node harness/scripts/prepare-scenario.mjs",
    "snapshot:scenarios": "node harness/scripts/snapshot-scenarios.mjs",
    "snapshot:harness-report": "node tests/snapshot-harness-report.mjs",
    "sim:seed-reset": "node sim/tests/reset-seeds.mjs",
    "ladle": "ladle dev"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@ladle/react": "^5.1.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "adm-zip": "^0.5.16",
    "jsdom": "^24.1.3",
    "npm-run-all2": "^6.1.2",
    "typescript": "^5.4.5",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
